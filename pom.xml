<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.chenhanhui</groupId>
    <artifactId>security-api</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <name>${project.artifactId}</name>
    <description>Spring Boot API request parameters are automatically encrypted and decrypted</description>
    <url>https://github.com/ChenHanHui/SecurityApi</url>

    <modules>
        <module>security-api-demo</module>
        <module>security-api-spring-boot-starter</module>
        <module>security-api-spring-boot3-starter</module>
    </modules>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>ChenHanHui</name>
            <email>1400152400@qq.com</email>
            <url>https://blog.csdn.net/xiaohuihui1400</url>
            <timezone>+8</timezone>
        </developer>
    </developers>

    <scm>
        <connection>https://github.com/ChenHanHui/SecurityApi.git</connection>
        <developerConnection>scm:git:git@github.com:ChenHanHui/SecurityApi.git</developerConnection>
        <url>https://github.com/ChenHanHui/SecurityApi</url>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <springboot2.version>2.7.18</springboot2.version>
        <springboot3.version>3.3.2</springboot3.version>
        <springboot2.java.version>8</springboot2.java.version>
        <springboot3.java.version>17</springboot3.java.version>

        <server.id>ossrh</server.id>
    </properties>

    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <property>
                    <name>server.id</name>
                    <value>ossrh</value>
                </property>
                <!-- 默认环境 -->
                <activeByDefault>true</activeByDefault>
            </activation>
            <distributionManagement>
                <snapshotRepository>
                    <id>${server.id}</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
                </snapshotRepository>
                <repository>
                    <id>${server.id}</id>
                    <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
                </repository>
            </distributionManagement>
        </profile>
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>server.id</name>
                    <value>release</value>
                </property>
            </activation>
            <distributionManagement>
                <snapshotRepository>
                    <id>${server.id}</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
                </snapshotRepository>
                <repository>
                    <id>${server.id}</id>
                    <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- central发布插件 -->
            <plugin>
                <groupId>org.sonatype.central</groupId>
                <artifactId>central-publishing-maven-plugin</artifactId>
                <version>0.5.0</version>
                <extensions>true</extensions>
                <configuration>
                    <publishingServerId>${server.id}</publishingServerId>
                </configuration>
            </plugin>

            <!-- 生成源码插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- gpg插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
